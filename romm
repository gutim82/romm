 romm_resources: 
 romm_redis_data:

services: 
 romm: 
   image: rommapp/romm:latest 
   container_name: romm 
   restart: unless-stopped 
   environment: 
     - DB_HOST=romm-db 
     - DB_NAME=romm # Should match MARIADB_DATABASE in mariadb 
     - DB_USER=romm-user # Should match MARIADB_USER in mariadb 
     - DB_PASSWD=MariaDB1982!! # Should match MARIADB_PASSWORD in mariadb 
     - ROMM_AUTH_SECRET_KEY=2gWRGrVLIS7HfuTZXzf3PybMY2fLusHp # Generate a key with `openssl rand -hex 32` 
     - IGDB_CLIENT_ID=xf528j6xlpntobve3mlqi5muktm2tl # Generate an ID and SECRET in IGDB 
     - IGDB_CLIENT_SECRET=mlz5ijikiv6fgcm3408ghy0oyqbibm # https://docs.romm.app/latest/Getting-Started/Generate-API-Keys/#igdb 
     - MOBYGAMES_API_KEY= # https://docs.romm.app/latest/Getting-Started/Generate-API-Keys/#mobygames 
     - STEAMGRIDDB_API_KEY=899441956a3eaf8aac379f4a36fcd646 # https://docs.romm.app/latest/Getting-Started/Generate-API-Keys/#steamgriddb 
     - SCREENSCRAPER_USER= # Use your ScreenScraper username and password 
     - SCREENSCRAPER_PASSWORD= # https://docs.romm.app/latest/Getting-Started/Generate-API-Keys/#screenscraper 
   volumes: 
     - romm_resources:/romm/resources # Resources fetched from IGDB (covers, screenshots, etc.) 
     - romm_redis_data:/redis-data # Cached data for background tasks 
     - /mnt/dietpi_userdata/romm/library:/romm/library # Your game library. Check https://github.com/rommapp/romm?tab=readme-ov-file#folder-structure for more details. 
     - /mnt/dietpi_userdata/romm/assets:/romm/assets # Uploaded saves, states, etc. 
     - /mnt/dietpi_userdata/romm/config:/romm/config # Path where config.yml is stored 
   ports: 
     - 85:8080 
   depends_on: 
     romm-db: 
       condition: service_healthy 
       restart: true

 romm-db: 
   image: mariadb:latest 
   container_name: romm-db 
   restart: unless-stopped 
   environment: 
     - MARIADB_ROOT_PASSWORD=Gustavo1982!! # Use a unique, secure password 
     - MARIADB_DATABASE=romm 
     - MARIADB_USER=romm-user 
     - MARIADB_PASSWORD=MariaDB1982!! 
   volumes: 
     - mysql_data:/var/lib/mysql 
   healthcheck: 
     test: ["CMD", "healthcheck.sh", "--connect", "--innodb_initialized"] 
     start_period: 30s 
     start_interval: 10s 
     interval: 10s
